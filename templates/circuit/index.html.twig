{% extends 'base-back.html.twig'%}

{% block body%}
	<div class="page-body">

		<div class="container-fluid">
			<div class="page-header dash-breadcrumb">
				<div class="row">
					<div class="col-6">
						<h3 class="f-w-600">Circuit</h3>
					</div>
					<div class="col-6">
						<div class="breadcrumb-sec">
							<ul class="breadcrumb">
								<li class="breadcrumb-item">
									<a href="{{ path('admin')}}">
										<i data-feather="home"></i>
									</a>
								</li>
								<li class="breadcrumb-item active">Circuits</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="container-fluid product-wrapper">
			<div class="product-grid">
				<div class="feature-products">
					<div class="row">
						<div class="col-md-4">
							<div class="product-sidebar">
								<div class="filter-section">
									<div class="card">
										<a href="{{ path('addcircuit')}}" style="color:black;">
											<div class="card-header">
												<h6 class="mb-0 f-w-600">Ajouter un Circuit<span class="pull-right">
														<i class="fa fa-globe toggle-data"></i>
													</span>
												</h6>
											</div>
										</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="product-wrapper-grid">
					<div class="row" id="row">
						{% for ci in c %}
							<div class=" col-xl-3 col-lg-6 col-sm-6 xl-4" style:"height=400px;">
								<div class="card">
									<div class="product-box">
										<div class="product-img"><img class="img-fluid" src="images/circuits/{{ci.image}}" alt="">
											<div class="product-hover">
												<ul>
													<li><a title="Supprimer"href="{{path('supprimer_circuit',{'id':ci.id})}}" ><i class="fa fa-trash"></i></a></li>
													<li><a title="Modifier"href="{{path('editCircuit',{'id':ci.id})}}" ><i class="fa fa-pen"></i></a></li>

												</ul>
											</div>
										</div>
									
										<div class="product-details">
											<h3>{{ci.nom}}
											</h3>
											<p>Longeur:
												{{ci.longeur}}</p>
											<p>Distance:
												{{ci.coursedistance}}</p>
											<p>Description:
												{{ci.description}}</p>
										</div>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
