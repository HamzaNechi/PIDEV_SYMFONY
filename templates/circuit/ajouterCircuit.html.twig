{% extends 'base-back.html.twig'%}
{% block title %}Ajouter circuit
{% endblock %}
{% block body %}
	<div class="page-body">
		<div class="container-fluid">
			<div class="page-header">
				<div class="row"></div>
			</div>
		</div>
		<!-- Container-fluid starts-->
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-12 col-xl-2"></div>
				<div class="col-sm-12 col-xl-8">
					<div class="row">
						<div class="col-sm-12">
							<div class="card">
								<div class="card-header pb-0">
									<h5>Ajouter circuit</h5>
								</div>
								<div class="card-body">

									{{ form_start(form,{'attr' :{'novalidate':'novalidate'}}) }}
									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Nom</label>
										<div
											class="col-sm-9">
											{# <input class="form-control" name="nom" type="text" placeholder="Nom"> #}
											{{ form_errors(form.nom) }}
											{{ form_widget(form.nom)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Pays</label>
										<div class="col-sm-9">
											{{ form_errors(form.pays) }}
											{{ form_widget(form.pays)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputEmail3">Longeur</label>
										<div class="col-sm-9">
											{{ form_errors(form.longeur) }}
											{{ form_widget(form.longeur)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Distance</label>
										<div class="col-sm-9">
											{{ form_errors(form.course_distance) }}
											{{ form_widget(form.course_distance)}}
										</div>
									</div>
									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Capacit√©</label>
										<div class="col-sm-9">
											{{ form_errors(form.capacite) }}
											{{ form_widget(form.capacite)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Image</label>
										<div class="col-sm-9">
											{{ form_errors(form.image) }}
											{{ form_widget(form.image)}}
										</div>
									</div>


									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label" for="inputPassword3">Description</label>
										<div class="col-sm-9">
											{{ form_errors(form.description) }}
											{{ form_widget(form.description)}}
										</div>
									</div>

								</div>
								<div class="card-footer pt-0">
									{{ form_widget(form.Ajouter)}}
									{{ form_widget(form.Annuler)}}
								</div>
								{{ form_end(form)}}
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>

{% endblock %}
