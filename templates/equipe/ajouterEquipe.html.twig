{% extends 'base-back.html.twig' %}
{% block title %}Ajouter équipe
{% endblock %}
{% block body %}
	<div class="page-body">
		<div class="container-fluid">
			<div class="page-header">
				<div class="row"></div>
			</div>
		</div>
		<!-- Container-fluid starts-->
		<div class="container-fluid">
			<div class="row">
				<div class="col-sm-12 col-xl-2"></div>
				<div class="col-sm-12 col-xl-8">
					<div class="row">
						<div class="col-sm-12">
							<div class="card">
								<div class="card-header pb-0">
									<h5>Ajouter équipe</h5>
									</div>
								<div class="card-body">

									{{ form_start(form, {'attr' :{'novalidate':'novalidate'}}) }}
									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label">Nom</label>
										<div
											class="col-sm-9">
											{# <input class="form-control" name="nom" type="text" placeholder="Nom"> #}
											{{ form_errors(form.nom) }}
											{{ form_widget(form.nom)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label">Email</label>
										<div class="col-sm-9">
											{{ form_errors(form.email) }}
											{{ form_widget(form.email)}}
										</div>
									</div>

									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label">Pays d'origine</label>
										<div class="col-sm-9">
											{{ form_errors(form.pays_origine) }}
											{{ form_widget(form.pays_origine)}}
										</div>
									</div>
									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label">Voiture</label>
										<div class="col-sm-9">
											{{ form_errors(form.voiture) }}
											{{ form_widget(form.voiture)}}
										</div>
									</div>
									<div class="mb-3 row">
										<label class="col-sm-3 col-form-label">Image</label>
										<div class="col-sm-9">
											{{ form_errors(form.logo) }}
											{{ form_widget(form.logo)}}
										</div>
									</div>


									{# {{ form(form)}} #}
								</div>
								<div class="card-footer pt-0">
									{{ form_widget(form.Ajouter)}}
									{{ form_widget(form.Annuler)}}
								</div>

								{{ form_end(form)}}
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
		<!-- Container-fluid Ends-->
	</div>
{% endblock %}
