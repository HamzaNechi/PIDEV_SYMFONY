{% extends 'base-back.html.twig' %}


{% block title %}Modifier équipe{% endblock %}

{% block body %}
<div class="page-body">
          <div class="container-fluid">
            <div class="page-header">
              <div class="row">
                {# <div class="col-sm-6">
                  <h3>Ajouter équipe</h3>
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin')}}"><i data-feather="home"></i></a></li>
                    <li class="breadcrumb-item">Equipe</li>
                    <li class="breadcrumb-item active">Ajouter équipe</li>
                  </ol>
                </div> #}
                
              </div>
            </div>
          </div>
          <!-- Container-fluid starts-->
          <div class="container-fluid">
            <div class="row">
            <div class="col-sm-12 col-xl-2"></div>
              <div class="col-sm-12 col-xl-8">
                <div class="row">
                  
                  <div class="col-sm-12">
                    <div class="card">
                      <div class="card-header pb-0">
                        <h5>Modifier équipe</h5>
                        <span>Using the <a href="#">card</a> component, you can extend the default collapse behavior to create an accordion.</span>
                      </div>
                      <div class="card-body">
                        
                        <form enctype="multipart/form-data" action="{{ path('modifierE',{'id':equipe.id})}}" method="post">
                          <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label" for="inputPassword3">Nom</label>
                            <div class="col-sm-9">
                              <input class="form-control" name="nom" type="text" placeholder="Nom" value="{{ equipe.nom }}">
                            </div>
                          </div>

                          <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label" for="inputEmail3">Email</label>
                            <div class="col-sm-9">
                              <input class="form-control" name="email" type="text" placeholder="Email" value="{{ equipe.email }}">
                            </div>
                          </div>
                          
                          <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label" for="inputPassword3">Pays d'origine</label>
                            <div class="col-sm-9">
                              <input class="form-control" name="pays" type="text" placeholder="Pays d'origine" value="{{ equipe.pays_origine }}">
                            </div>
                          </div>
                          <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label" for="inputPassword3">Voiture</label>
                            <div class="col-sm-9">
                              <input class="form-control" name="voiture" type="text" placeholder="Voiture" value="{{ equipe.voiture }}">
                            </div>
                          </div>
                          <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label" for="inputPassword3">Image</label>
                            <div class="col-sm-9">
                              <input accept="image/*" name="logo" id="file" type="file">
                              <input type="hidden" id="img" value="{{ equipe.logo}}" name="img">
                            </div>
                          </div>
                          
                          
                        

                        {# {{ form(form)}} #}
                      </div>
                      <div class="card-footer pt-0">
                        <button class="btn btn-primary" id="submit" type="submit">Modifier</button>
                        <button class="btn btn-dark" type="reset">Annuler</button>
                      </div>
                      
                      </form>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- Container-fluid Ends-->
        </div>
{% endblock %}